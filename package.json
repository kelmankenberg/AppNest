{
  "name": "MyPAs",
  "version": "0.1.0",
  "description": "The MyPAs Launcher is a lightweight Electron-based application designed to help users launch installed and portable applications from their file system.",
  "license": "ISC",
  "author": "Kel Mankenberg",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@testing-library/dom": "^10.4.0",
    "electron": "^25.9.6",
    "electron-builder": "^26.0.12",
    "electron-mocha": "^13.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mock-require": "^3.0.3",
    "spectron": "^19.0.0"
  },
  "dependencies": {
    "electron-store": "^10.0.1",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.kelmankenberg.mypas",
    "productName": "MyPAs",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.db",
      "!node_modules/sqlite3/deps/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "portable": {
      "artifactName": "WindowsDesktopLauncher-Portable-${version}.exe"
    },
    "forceCodeSigning": false,
    "asar": true,
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ]
  }
}
